{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "composite": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,

    "skipLibCheck": true
  },
  "include": [
    "./src"
  ]
}
